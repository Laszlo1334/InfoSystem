{
  "title": "Auth Service Monitoring",
  "tags": ["auth", "monitoring", "metrics"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "type": "graph",
      "title": "Час відповіді сервісу",
      "targets": [
        {
          "expr": "rate(flask_http_request_duration_seconds_sum[5m]) / rate(flask_http_request_duration_seconds_count[5m])",
          "legendFormat": "Середній час відповіді",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(flask_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "95th percentile",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(flask_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "99th percentile",
          "refId": "C"
        }
      ],
      "datasource": "Prometheus",
      "xaxis": {
        "mode": "time"
      },
      "yaxes": [
        {
          "format": "s",
          "label": "Час відповіді (секунди)"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "type": "stat",
      "title": "Загальна кількість запитів",
      "targets": [
        {
          "expr": "sum(flask_http_request_total)",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1000,
                "color": "yellow"
              },
              {
                "value": 5000,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "type": "piechart",
      "title": "Розподіл запитів за статусами",
      "targets": [
        {
          "expr": "sum by (status) (flask_http_request_total)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "options": {
        "pieType": "pie",
        "displayLabels": ["name", "percent"],
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        }
      }
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "type": "graph",
      "title": "Активність користувачів по CRUD-операціях",
      "targets": [
        {
          "expr": "sum by (action) (rate(user_actions_total[5m]))",
          "legendFormat": "{{action}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "xaxis": {
        "mode": "time"
      },
      "yaxes": [
        {
          "format": "ops",
          "label": "Операцій/сек"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 5,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "type": "graph",
      "title": "Запити по ендпоінтам",
      "targets": [
        {
          "expr": "sum by (endpoint) (rate(flask_http_request_total[5m]))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "xaxis": {
        "mode": "time"
      },
      "yaxes": [
        {
          "format": "reqps",
          "label": "Запитів/сек"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 6,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "type": "table",
      "title": "Топ користувачів по активності",
      "targets": [
        {
          "expr": "topk(10, sum by (user, action) (user_actions_total))",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "datasource": "Prometheus",
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        }
      }
    }
  ],
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s"
}
